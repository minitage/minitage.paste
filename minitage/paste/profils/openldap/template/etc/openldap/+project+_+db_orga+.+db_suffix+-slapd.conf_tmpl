#echo '#######################################################################\n'
# SLAPD Configuration
#echo '#######################################################################\n'
pidfile     ${sys}/var/run/openldap/${project}.${db_orga}.${db_suffix}.slapd.pid
argsfile    ${sys}/var/run/openldap/${project}.${db_orga}.${db_suffix}.slapd.args
logfile     ${sys}/var/log/openldap/${project}.${db_orga}.${db_suffix}/slapd.log
loglevel    8

