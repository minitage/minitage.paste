# ROOT ACCESS
#echo '#######################################################################\n'
rootdn          "cn=$db_user,dc=${db_orga},dc=${db_suffix}"
rootpw        $db_password
#echo '#######################################################################\n'
# SECURITY
#echo '#######################################################################\n'
access to attrs=userPassword
        by self write
        by anonymous auth
        by * none
access to attrs=gecos,description,loginShell
        by self write
        by * read
access to *
         by * auth

